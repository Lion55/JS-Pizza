<% include common/header.ejs %>


<div class="main-container container-fluid">
    <div class="row">

        <div class="col-md-9 col-sm-6 left-pannel">

            <div class="main-container container-fluid">
    <div class="row">

        <div class="col-md-9 col-sm-6 left-pannel">

            <div class="contact-form">
                <div class="contact-form-header">1. Контактні дані</div>
                <span class="forms-panel col-md-7 col-sm-6">
                    <form class="form-horizontal" id="fill-in-form" role="form" method="post">
                        <div class="form-group">
                                    <label class="col-sm-2 control-label">Ім'я</label>

                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="name"
                                               placeholder="Ім'я Прізвище" aria-describedby="helpBlock">
                                        <span id="helpBlock" class="help-block">Введіть тільки власне ім’я, без цифр</span>
                                    </div>
                        </div>

                        <div class="form-group">
                                    <label class="col-sm-2 control-label">Номер</label>

                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="number"
                                               placeholder="+380994010999" aria-describedby="helpBlock">
                                        <span id="helpBlock2" class="help-block">Введіть номер телефону у форматі +380 або почніть з 0</span>
                                    </div>
                        </div>

                        <div class="form-group">
                                    <label class="control-label col-sm-2">Адреса</label>

                                    <div class="col-sm-10">
                                        <input type="text" class="form-control " id="address"
                                               placeholder="Київ, вул. Спаська, 2" aria-describedby="helpBlock">
                                        <span id="helpBlock3" class="help-block">Введіть адресу доставки піци</span>
                                    </div>
                        </div>
                    </form>
                </span>
                <span class="col-md-5 col-sm-6 order-summary">
                    <h4>Інформація про замовлення</h4>
                    <h5>Приблизний час доставки:
                        <span id="time">невідомий</span>
                    </h5>
                    <h5>Адреса доставки:
                        <span id="order-address">невідома</span>
                    </h5>
                </span>
                <button type="button" class="btn btn-info confirm">Далі<span class="glyphicon glyphicon-chevron-right"></span></button>
            </div>

        </div>
    </div>
</div>

<script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?key=AIzaSyAmquOWC5A4Pks4gVESG_rp5a9NhTTb3aE"></script>
